<Window x:Class="WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel>
            <TextBox Text="Выберите количество баллов"/>
            <StackPanel Orientation="Horizontal" Margin="0 20 0 0">
                <TextBlock Text="1 Задание: "/>
                <TextBox Name="number1" Margin="10 0 0 0" Width="50"/>
                <TextBlock Text="из 10" Margin="5 0 0 0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0 20 0 0">
                <TextBlock Text="2 Задание: "/>
                <TextBox Name="number2" Margin="10 0 0 0" Width="50"/>
                <TextBlock Text="из 50" Margin="5 0 0 0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0 20 0 0">
                <TextBlock Text="3 Задание: "/>
                <TextBox Name="number3" Margin="10 0 0 0" Width="50"/>
                <TextBlock Text="из 30" Margin="5 0 0 0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0 20 0 0">
                <TextBlock Text="4 Задание: "/>
                <TextBox Name="number4" Margin="10 0 0 0" Width="50"/>
                <TextBlock Text="из 10" Margin="5 0 0 0"/>
            </StackPanel>

            <Button Content="Рассчитать оценку" Click="Button_Click" Margin="0 20 0 0"/>
            <TextBlock Name="result" Margin="0 10 0 0" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
